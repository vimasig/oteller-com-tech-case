{
  "info": {
    "name": "Oteller.com API",
    "description": "Postman collection for all REST API endpoints of Oteller.com Tech Case.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Hotel Service",
      "item": [
        {
          "name": "Get All Hotels",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/hotels", "host": ["{{baseUrl}}"], "path": ["api", "hotels"] }
          }
        },
        {
          "name": "Create Hotel",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Hotel Name\",\n  \"address\": \"Hotel Address\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/hotels", "host": ["{{baseUrl}}"], "path": ["api", "hotels"] }
          }
        },
        {
          "name": "Get Hotel By ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/hotels/:id", "host": ["{{baseUrl}}"], "path": ["api", "hotels", ":id"] }
          }
        },
        {
          "name": "Update Hotel",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated Name\",\n  \"address\": \"Updated Address\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/hotels/:id", "host": ["{{baseUrl}}"], "path": ["api", "hotels", ":id"] }
          }
        },
        {
          "name": "Delete Hotel",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/hotels/:id", "host": ["{{baseUrl}}"], "path": ["api", "hotels", ":id"] }
          }
        },
        {
          "name": "Get All Rooms",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/rooms", "host": ["{{baseUrl}}"], "path": ["api", "rooms"] }
          }
        },
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "body": { "mode": "raw", "raw": "{\n  \"hotelId\": \"HotelId\",\n  \"roomNumber\": \"101\",\n  \"type\": \"Single\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/rooms", "host": ["{{baseUrl}}"], "path": ["api", "rooms"] }
          }
        },
        {
          "name": "Get Rooms By Hotel ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/rooms/hotel/{{hotelId}}", "host": ["{{baseUrl}}"], "path": ["api", "rooms", "hotel", "{{hotelId}}"] }
          }
        },
        {
          "name": "Get Room By ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/rooms/:id", "host": ["{{baseUrl}}"], "path": ["api", "rooms", ":id"] }
          }
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "body": { "mode": "raw", "raw": "{\n  \"roomNumber\": \"102\",\n  \"type\": \"Double\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/rooms/:id", "host": ["{{baseUrl}}"], "path": ["api", "rooms", ":id"] }
          }
        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{jwtToken}}", "type": "text"}
            ],
            "url": { "raw": "{{baseUrl}}/api/rooms/:id", "host": ["{{baseUrl}}"], "path": ["api", "rooms", ":id"] }
          }
        }
      ]
    },
