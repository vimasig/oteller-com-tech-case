            ],
            "body": { "mode": "raw", "raw": "{\n  \"guestName\": \"Jane Doe\",\n  \"checkIn\": \"2025-08-07\",\n  \"checkOut\": \"2025-08-12\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/reservations/:id", "host": ["{{baseUrl}}"], "path": ["api", "reservations", ":id"] }
